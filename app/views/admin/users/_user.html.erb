<!-- app/views/admin/users/_user.html.erb -->

<tr>
  <td><%= user.id %></td>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td><%= user.is_active? ? 'Yes' : 'No' %></td>
  <td>
    <%= link_to '詳細', admin_user_path(user) %>
    |
    <%= link_to '編集', edit_admin_user_path(user) %>
    |
    <%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか？' } %>
  </td>
</tr>
