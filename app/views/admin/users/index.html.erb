<!-- app/views/admin/users/index.html.erb -->

<h1>ユーザー一覧</h1>
<%= form_tag admin_posts_path, method: :get do %>
  <%= text_field_tag :search, params[:search], placeholder: 'Search posts...' %>
  <%= submit_tag 'Search' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>名前</th>
      <th>Email</th>
      <th>会員ステータス</th> <!-- 新しい列を追加 -->
      <th>詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.is_active? ? '有効会員' : '退会済み' %></td> <!-- 会員ステータスを表示 -->
        <td>
          <%= link_to '詳細', admin_user_path(user) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @users %>
