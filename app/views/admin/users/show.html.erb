</style>

<main class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>ユーザー詳細</h1>
      <p>Name: <%= @user.name %></p>
      <p>Email: <%= @user.email %></p>
      <p>フォロワー数: <%= @user.followers.count %></p>
      <p>フォロー数: <%= @user.followings.count %></p>
      <p>ステータス: <%= @user.is_active? ? '会員' : '退会' %></p>
      
      <h2>会員ステータスの変更</h2>
      <%= form_for(@user, url: admin_user_path(@user), method: :patch) do |f| %>
        <div class="form-group">
          <%= f.label :is_active, "会員ステータス" %>
          <%= f.select :is_active, [["有効会員","true"], ["退会済み","false"]], class: "form-control" %>
        </div>
        <%= f.submit "更新", class: "btn btn-primary" %>
      <% end %>

      <h2>ユーザーの投稿</h2>
      <table class="table">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>Content</th>
            <th>いいね数</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= link_to truncate(post.title, length: 24), admin_post_path(post) %></td>
              <td><%= truncate(post.content, length: 24) %></td>
              <td><%= post.likes.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= will_paginate @posts %>

      <%= link_to '戻る', admin_users_path, class: "btn btn-secondary" %>
    </div>
  </div>
</main>
