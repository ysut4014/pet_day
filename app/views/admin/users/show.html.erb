<!-- app/views/admin/users/show.html.erb -->

<h1>User Details</h1>
<p>Name: <%= @user.name %></p>
<p>Email: <%= @user.email %></p>
<p>Status: <%= @user.is_active? ? 'Active' : 'Inactive' %></p>

<p></p>

<h2>ユーザーの投稿</h2>
<% @user.posts.each do |post| %>
  <p><%= post.content %></p>
  <p><strong>いいね数: <%= post.likes.count %></strong></p>
  <!-- Add more details as needed -->
<% end %>

<%= link_to 'Back', :back %>
