<style>
  @media (max-width: 576px) { /* スマートフォンの画面サイズ以下の場合のスタイル */
    .plate {
      width: 100%; /* 幅を100%に設定 */
    }
    .home-box {
      padding: 0 10px; /* 左右のパディングを追加 */
    }
    .notification {
      margin: 10px 0; /* 通知の間のマージンを追加 */
    }
  }
</style>
<div style="text-align: center;">
  <h1>新しい投稿をする</h1>

  <%= form_with model: @post, url: public_posts_path, multipart: true do |form| %>
    <p>
      <%= form.label :タイトル %><br>
      <%= form.text_field :title %>
    </p>

    <p>
      <%= form.label :投稿文 %><br>
      <%= form.text_area :content, rows: 5, cols: 30 %> <!-- 高さ5行、幅30文字に設定 -->
    </p>

    <p>
      <%= form.hidden_field :user_id, value: current_user.id %>
    </p>

    <p>
      <%= form.label :ペットの写真 %><br>
      <%= form.file_field :image %>
    </p>

    <p>
      <%= form.submit "投稿する" %>
    </p>
  <% end %>
  <%= link_to "Back", public_user_path(id: current_user.id), class: "btn btn-secondary" %>
</div>
