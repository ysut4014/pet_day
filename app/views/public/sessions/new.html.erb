

<main class="container">
  <h5 class="p-5">会員ログイン</h5>
  <form action="" method="post">
    <div class="row">
      
      
<main class="container">
  <h5 class="p-5">ログイン</h5>

  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-md-3 mb-3">
        <p>メールアドレス</p>
      </div>

      <div class="col-md-6 mb-3">
        <%= f.email_field :email, class: "form-control", id: "inputEmail", placeholder: "sample@example.com", required: true %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3 mb-3">
        <p>パスワード</p>
      </div>

      <div class="col-md-6 mb-3">
        <%= f.password_field :password, class: "form-control", required: true %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3 mb-3">
      </div>
      <div class="col-md-6 mb-3">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <h5 class="p-3">まだアカウントをお持ちでない方</h5>
  <a href="<%=  public_registrations_path %>">新規登録はこちら</a>
</main>
    </div>
  </form>
</main>

