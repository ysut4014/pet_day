
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h5 class="p-5">ログイン</h5>

        <% if flash[:alert] %>
          <div class="alert alert-danger">
            メールアドレスまたはパスワードが無効です。
          </div>
        <% end %>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group row">
            <%= f.label :メールアドレス, class: "col-md-3 col-form-label" %>
            <div class="col-md-9">
              <%= f.email_field :email, class: "form-control", id: "inputEmail", placeholder: "sample@example.com", required: true %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :パスワード, class: "col-md-3 col-form-label" %>
            <div class="col-md-9">
              <%= f.password_field :password, class: "form-control", required: true %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-md-9 offset-md-3">
              <%= f.submit "ログイン", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>

        <h5 class="p-3">まだアカウントをお持ちでない方</h5>
        <a href="<%= new_user_registration_path %>">新規登録はこちら</a>
      </div>
    </div>
  </div>
