<h2>プロフィール画像を編集</h2>

<%= form_with(model: @user, url: update_image_public_user_path(@user), method: :patch, html: {multipart: true}) do |form| %>
  <div class="form-group">
    <%= form.label :profile_image, "プロフィール画像" %>
    <%= form.file_field :profile_image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "更新", class: "btn btn-primary" %>
  </div>
<% end %>
