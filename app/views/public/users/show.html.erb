<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= @user.name %>さんのページ</title>
  <!-- スタイルシート -->
  <style>
    /* スマートフォン用のスタイルを追加 */
    @media only screen and (max-width: 600px) {
      .table-container {
        overflow-x: auto;
      }
      table {
        width: 100%;
        margin-left: 0;
      }
      .post-container {
        margin-left: 0;
        width: 100%;
      }
      .post {
        max-width: 100%;
        margin-left: 0;
        margin-right: 0;
      }
    }

    /* テーブルのスタイル */
    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }
    th {
      background-color: #f2f2f2;
    }

    /* ユーザーリンクのスタイル */
    .user-links {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 10px;
      margin-top: 20px;
    }
    .user-links a {
      border: 1px solid #e0e0e0; 
      padding: 10px 20px;
      background-color: transparent; /* 背景色を透明に設定 */
      color: #000; /* 文字色を黒に設定 */
      text-decoration: none;
      border-radius: 5px;
      text-align: center;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .user-links a:hover {
      background-color: #e0e0e0; /* ホバー時の背景色 */
    }

    /* ユーザー情報テーブルのスタイル */
    .user-info-table {
      width: 35%; 
      text-align: left;
    }
    .user-info-table td:first-child {
      width: 20%;
      background-color: #f2f2f2;
    }
    .user-info-table td:last-child {
      width: 40%;
    }

    .post-header {
      margin-bottom: 10px;
    }
    .post-content {
      max-width: 400px;
    }
    .pagination {
      margin-top: 20px;
      display: flex;
      justify-content: center;
    }
    
    /* 投稿のスタイル */
    .post p {
      word-break: break-all;
      max-width: 24em;
      margin: 0 auto;
      text-align: left;
    }
    .post img {
      max-width: 100%;
      height: auto;
      display: block;
      margin: 0 auto;
    }
  </style>
</head>
<body>
  
<!-- ユーザー情報の表示 -->
<div style="padding-left: 10px;">
  <h1><%= @user.name %>さんのページ</h1>
  <div class="table-container">
    <table class="user-info-table">
      <tr>
        <td>ネーム</td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td class="highlighted-cell"><%= @user.public_email ? @user.email : "非公開" %></td>
      </tr>
      <tr>
        <td>フォロー数</td>
        <td><%= @user.followings.count %></td>
      </tr>
      <tr>
        <td>フォロワー数</td>
        <td><%= @user.followers.count %></td>
      </tr>
      <tr>
        <td>いいねした数</td>
        <td><%= @user.likes.count %></td>
      </tr>      
    </table>
  </div>
</div>

<!-- ユーザーへのリンク -->
<div class="user-links">
  <% if current_user == @user %>
    <%= link_to "いいね一覧", public_post_likes_path(@user), class: "transparent-btn" %>
    <%= link_to "フォロワー一覧", public_user_followers_path(@user), class: "transparent-btn" %>
    <%= link_to "フォロー一覧", public_user_followings_path(@user), class: "transparent-btn" %>
    <%= link_to "編集", edit_public_user_path(@user), class: "transparent-btn" %>
    <%= link_to "投稿消去", public_users_path(@user), class: "transparent-btn" %>
    <%= link_to "退会", delete_public_user_path(@user), class: "transparent-btn" %>
  <% end %>
</div>

<!-- 投稿コンテナ -->
<div class="post-container">
  <h2><%= @user.name %>さんの投稿一覧</h2>
  <style>
    .post-container {
      text-align: center; 
    }

    /* 投稿のスタイル */
    .post {
      border: 1px solid #ccc; 
      border-radius: 5px; 
      padding: 10px; /* 枠内の余白 */
      margin-bottom: 20px; /* 投稿間の間隔 */
      width: 80%; 
      margin-left: auto; 
      margin-right: auto;
      max-width: 600px; 
    }

    /* いいねボタンのスタイル */
    .like-count {
      margin-left: 10px; /* いいね数とボタンの間隔 */
      color: #777; 
    }
    .like-button {      
      display: inline-block; 
      padding: 5px 10px; /* ボタンの余白 */
      background-color: #007bff; 
      color: #fff; 
      border: none; 
      border-radius: 5px; 
      cursor: pointer; /* ポインター */
    }

    /* 投稿内容のスタイル */
    .post p {
      max-width: 24em; 
      margin: 0 auto; 
      text-align: left;
    }
  </style>

  <div class="post-container">
    <!-- 投稿の表示 -->
    <% @posts.each do |post| %>
      <div class="post">
        <div class="post-header">
          <h2><%= link_to post.title, public_post_path(post) %></h2>
          <p class="post-date">投稿日時: <%= post.created_at.strftime("%Y-%m-%d %H:%M:%S") %></p>
        </div>
        <p><%= post.content %></p>
        <% if post.image.attached? %>
          <%= link_to image_tag(post.image), post.image, target: "_blank" %>
        <% end %>

        <!-- いいねボタン -->
        <br><%= render 'likes/like_button', post: post %>

        <%= render 'posts/comment', post: post %>
      </div>
    <% end %>

    <%= will_paginate @posts %>
  </div>
</div>

<script>
  document.querySelectorAll('.comment-toggler').forEach(function(button) {
    button.addEventListener('click', function(event) {
      event.preventDefault();
      var postId = event.target.dataset.postId;
      var commentsDiv = document.querySelector('#comments_' + postId);

      if (commentsDiv.style.display === 'none') {
        commentsDiv.style.display = 'block';
      } else {
        commentsDiv.style.display = 'none';
      }
    });
  });
</script>
</body>
</html>
